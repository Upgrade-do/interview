<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp"
    android:theme="@style/AppTheme.AppBarOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/competency_question_title"
            android:textSize="18sp"
            android:textColor="@color/cool_black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:text="Que me podrias decir del ciclo de diseÃ±o de software?"
            android:layout_weight="4"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/competency_question_hint_0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="JAVA"
                android:textColor="@color/grayText"
                android:layout_weight="7"
                />

            <Spinner
                android:id="@+id/competency_question_spinner_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/competency_question_frame_1"
            android:weightSum="10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/competency_question_hint_1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="JAVA"
                android:textColor="@color/grayText"
                android:layout_weight="7"
                />

            <Spinner
                android:id="@+id/competency_question_spinner_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/competency_question_frame_2"
            android:weightSum="10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/competency_question_hint_2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="JAVA"

                android:textColor="@color/grayText"
                android:layout_weight="7"
                />

            <Spinner
                android:id="@+id/competency_question_spinner_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/competency_question_frame_3"
            android:weightSum="10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/competency_question_hint_3"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="JAVA"

                android:textColor="@color/grayText"
                android:layout_weight="7"
                />

            <Spinner
                android:id="@+id/competency_question_spinner_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/competency_question_frame_4"
            android:weightSum="10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/competency_question_hint_4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="JAVA"
                android:textColor="@color/grayText"
                android:layout_weight="7"
                />

            <Spinner
                android:id="@+id/competency_question_spinner_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/competency_question_frame_5"
            android:weightSum="10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/competency_question_hint_5"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="JAVA"

                android:textColor="@color/grayText"
                android:layout_weight="7"
                />

            <Spinner
                android:id="@+id/competency_question_spinner_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="3"/>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentarios"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/cool_black"
            app:hintTextAppearance="@style/TextInputLayoutColors">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/competency_question_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:focusableInTouchMode="true"
                android:textColor="@color/grayText"
                android:gravity="start"/>


        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>